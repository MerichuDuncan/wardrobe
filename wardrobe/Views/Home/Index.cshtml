@{
    ViewBag.Title = "Home Page";
}
<div class="panel-heading">
    <h1>Chue's Wardrobe</h1>
    <p class="lead">Welcome to my wardrobe. A place where you can come to see different outfits and to get a sense of my clothing style.</p>
</div>
<div class="frontpage">
    <div class="row">

        <!--I want to show different images to my homepage that reflects what's inside my webpage-->
        <div class="panel">
            <div class="col-md-6">
                <div class="panel">
                    <h2>@Html.ActionLink("Wardrobes", "Index", "Wardrobes")</h2>
                    <img src="@Url.Content("~/Content/me.jpg")" width="500" height="500" />
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel">
                <h2>@Html.ActionLink("Tops", "Index", "Tops")</h2>
                <img src="@Url.Content("~/Content/summertop.jpg")" width="200" height="200" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel">
                <h2>@Html.ActionLink("Bottoms", "Index", "Bottoms")</h2>
                <img src="@Url.Content("~/Content/shorts.jpg")" width="200" height="200" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel">
                <h2>@Html.ActionLink("Shoes", "Index", "Shoes")</h2>
                <img src="@Url.Content("~/Content/converseshoes.jpg")" width="200" height="200" />
            </div>
        </div>
        <div class="col-md-3">
            <div class="panel">
                <h2>@Html.ActionLink("Accessories", "Index", "Accessories")</h2>
                <img src="@Url.Content("~/Content/Applewatch.jpg")" width="200" height="200" />
            </div>
        </div>
    </div>
</div>
